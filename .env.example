# ==============================================
# LitScribe Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values

# ----------------------------------------------
# Claude API Configuration
# ----------------------------------------------
# Get your API key from: https://console.anthropic.com/
# Recommended models: claude-opus-4-5-20251124 or claude-sonnet-4-5-20250929
LITELLM_MODEL=anthropic/claude-sonnet-4-5-20250929
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ----------------------------------------------
# Academic Search APIs
# ----------------------------------------------

# Google Scholar Search (via SerpApi)
# Register at: https://serpapi.com/
# Free tier: 100 searches/month
SERPAPI_KEY=your-serpapi-key-here

# PubMed / NCBI E-utilities API Key (optional but recommended)
# Register at: https://www.ncbi.nlm.nih.gov/account/
# With API key: 10 requests/sec (without: 3 requests/sec)
NCBI_API_KEY=your-ncbi-api-key-here
NCBI_EMAIL=your.email@example.com

# ----------------------------------------------
# Zotero Integration
# ----------------------------------------------
# Get API key from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=your-zotero-api-key-here
ZOTERO_LIBRARY_ID=your-library-id
ZOTERO_LIBRARY_TYPE=user  # or 'group'

# Local Zotero (if using desktop app)
ZOTERO_LOCAL=true
ZOTERO_LOCAL_PORT=23119

# ----------------------------------------------
# Local LLM Configuration (MLX/Ollama)
# ----------------------------------------------
# Ollama base URL (default: http://localhost:11434)
LOCAL_LLM_BASE_URL=http://localhost:11434

# Recommended models for M4:
# - qwen3:32b-4bit  (best balance)
# - qwen3:14b-8bit  (faster)
# - qwen3:235b-4bit (most capable, requires 128GB RAM)
LOCAL_LLM_MODEL=qwen3:32b-4bit

# MLX-specific settings (if using LM Studio)
MLX_ENABLED=false
MLX_MODEL_PATH=/path/to/mlx/models

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
LITSCRIBE_DATA_DIR=./data
LITSCRIBE_CACHE_DIR=./cache
LITSCRIBE_LOG_LEVEL=INFO

# Cache expiration (in hours)
CACHE_EXPIRATION_HOURS=24

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# ----------------------------------------------
# Development Settings
# ----------------------------------------------
DEBUG=false
TESTING=false
